<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/messengerImageViewLeft"
                android:layout_margin="8dp"
                android:src="@drawable/profile_img"
                android:layout_width="70dp"
                android:layout_height="70dp" />

            <TextView
                android:id="@+id/messageTextView"
                android:layout_toEndOf="@id/messengerImageViewLeft"
                android:textSize="14.5sp"
                android:textStyle="bold"
                android:text="Message"
                android:padding="5dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/nameOfMessenger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/nameOfMessenger"
                android:layout_toEndOf="@id/messengerImageViewLeft"
                android:textSize="12sp"
                android:textStyle="italic"
                android:background="@drawable/rounded_corner2"
                android:padding="5dp"
                android:text="Name of messenger"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/messengerImageViewRight"
                android:layout_margin="8dp"
                android:src="@drawable/profile_img"
                android:layout_alignParentRight="true"
                android:visibility="invisible"
                android:layout_width="70dp"
                android:layout_height="70dp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>